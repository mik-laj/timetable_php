{% extends 'organizationunit/base.html.twig' %}


{% block crud_toolbar %}
    {% if is_granted('ROLE_MANAGE_ORGANIZATION_UNIT') %}
        <a href="{{ path('organizationunit_new') }}" class="btn btn-primary">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Create a new entry
        </a>
    {% endif %}
{% endblock %}

{% block crud_title %}OrganizationUnit list{% endblock %}

{% block crud_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">List</h3>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for organizationUnit in organizationUnits %}
                    <tr>
                        <td><a href="{{ path('organizationunit_show', { 'id': organizationUnit.id }) }}">{{ organizationUnit.id }}</a></td>                    
                        <td>{{ organizationUnit.name }}</td>
                        <td>
                            <a href="{{ path('organizationunit_show', { 'id': organizationUnit.id }) }}" class="btn btn-default">
                                <i class="fa fa-eye"></i>
                                Show
                            </a>
                            {% if is_granted('ROLE_MANAGE_ORGANIZATION_UNIT') %}
                                <a href="{{ path('organizationunit_edit', { 'id': organizationUnit.id }) }}" class="btn btn-default">
                                    <i class="fa fa-pencil"></i>
                                    Edit
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
